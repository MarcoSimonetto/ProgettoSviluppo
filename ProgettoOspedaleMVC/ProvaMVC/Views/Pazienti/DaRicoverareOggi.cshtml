@model List<ProvaMVC.Models.Paziente>

@{
    var lettiLiberi = ViewBag.LettiLiberi as List<int>;
}

<h2>Pazienti da ricoverare oggi</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Codice Fiscale</th>
            <th>Data Ricovero</th>
            <th>Assegna Letto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paziente in Model)
        {
            <tr>
                <td>@paziente.Nome</td>
                <td>@paziente.Cognome</td>
                <td>@paziente.CF</td>
                <td>@paziente.DataRicovero</td>
                <td>
                        <form method="post" asp-action="DaRicoverareOggi">
                        <input type="hidden" name="ID" value="@paziente.ID" />
                        <select name="NumeroLetto" class="form-control" required>
                            <option value="">-- Seleziona --</option>
                            @foreach (var letto in lettiLiberi)
                            {
                                <option value="@letto">@letto</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-success btn-sm mt-1">Ricovera</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
    
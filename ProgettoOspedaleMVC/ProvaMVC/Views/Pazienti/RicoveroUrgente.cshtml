@model ProvaMVC.Models.Paziente

@{
    ViewData["Title"] = "Ricovero Urgente";
    var lettiLiberi = ViewBag.LettiLiberi as List<int>;
}

<h2>Ricovero Urgente</h2>

<form asp-action="RicoveroUrgente" method="post">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="IDReparto" />

    <div class="form-group">
        <label asp-for="CF"></label>
        <input asp-for="CF" class="form-control" required />
        <span asp-validation-for="CF" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" required />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataNascita"></label>
        <input asp-for="DataNascita" type="date" class="form-control" required />
        <span asp-validation-for="DataNascita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LuogoNascita"></label>
        <input asp-for="LuogoNascita" class="form-control" required />
        <span asp-validation-for="LuogoNascita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MotivoRicovero"></label>
        <input asp-for="MotivoRicovero" class="form-control" required />
        <span asp-validation-for="MotivoRicovero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataDimissione"></label>
        <input asp-for="DataDimissione" type="date" class="form-control"/>
        <span asp-validation-for="DataDimissione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Patologie"></label>
        <input asp-for="Patologie" class="form-control" />
        <span asp-validation-for="Patologie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Allergie"></label>
        <input asp-for="Allergie" class="form-control" />
        <span asp-validation-for="Allergie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AltreNote"></label>
        <textarea asp-for="AltreNote" class="form-control"></textarea>
        <span asp-validation-for="AltreNote" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Numero Letto</label>
        <select asp-for="NumeroLetto" class="form-control" required>
            <option value="">-- Seleziona un letto --</option>
            @if (lettiLiberi != null && lettiLiberi.Any())
            {
                foreach (var letto in lettiLiberi)
                {
                    <option value="@letto">Letto @letto</option>
                }
            }
            else
            {
                <option disabled>Nessun letto disponibile</option>
            }
        </select>
        <span asp-validation-for="NumeroLetto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ricovera</button>
</form>

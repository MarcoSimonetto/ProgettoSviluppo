@model List<ProvaMVC.Models.Paziente>
@{
    ViewData["Title"] = "Pazienti da Dimettere Oggi";
}

<h2 class="mt-3">Pazienti da Dimettere</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Count == 0)
{
    <p>Nessun paziente da dimettere oggi.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Letto</th>
                <th>Motivo Ricovero</th>
                <th>Dimetti</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Cognome</td>
                    <td>@p.NumeroLetto</td>
                    <td>@p.MotivoRicovero</td>
                    <td>
                        <form asp-action="DaDimettere" asp-controller="Pazienti" method="post">
                            <input type="hidden" name="ID" value="@p.ID" />
                            <button type="submit" class="btn btn-danger btn-sm">Dimetti</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@{
    ViewData["Title"] = "Richiesta Trasferimento Paziente";
}

<h1 class="display-4">Richiesta Trasferimento Paziente</h1>
<p class="lead">Compila il modulo per richiedere il trasferimento di un paziente in un altro reparto.</p>

<div class="mt-4">
    <div class="alert alert-info">
        **Da implementare**: Form per la richiesta di trasferimento.
    </div>

    <form>
        <div class="mb-3">
            <label for="pazienteSelect" class="form-label">Seleziona Paziente:</label>
            <select class="form-select" id="pazienteSelect" aria-label="Seleziona Paziente">
                <option selected>Seleziona un paziente...</option>
                <option value="1">Mario Rossi (Cod.F. MRRSS80A01H501D)</option>
                <option value="2">Luisa Bianchi (Cod.F. LSBNC75B02G602E)</option>
                @* Popola dinamicamente dall'API *@
            </select>
        </div>
        <div class="mb-3">
            <label for="repartoDestinazione" class="form-label">Reparto di Destinazione:</label>
            <input type="text" class="form-control" id="repartoDestinazione" placeholder="Inserisci il reparto di destinazione">
        </div>
        <div class="mb-3">
            <label for="motivoTrasferimento" class="form-label">Motivo del Trasferimento:</label>
            <textarea class="form-control" id="motivoTrasferimento" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Invia Richiesta</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}